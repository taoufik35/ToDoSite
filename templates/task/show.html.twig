{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>NameTask</th>
                <td>{{ task.nameTask }}</td>
            </tr>
            <tr>
                <th>SummaryTask</th>
                <td>{{ task.summaryTask }}</td>
            </tr>
            <tr>
                <th>DateTask</th>
                <td>{{ task.dateTask ? task.dateTask|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeadlineTask</th>
                <td>{{ task.deadlineTask ? task.deadlineTask|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
